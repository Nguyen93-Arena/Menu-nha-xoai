ย ย ย ย ย ย // Function to update selected items and total price

ย ย ย ย ย ย function updateCustomCombo() {

ย ย ย ย ย ย ย ย let total = 0;

ย ย ย ย ย ย ย ย selectedItemsList.innerHTML = ''; // Clear previous list

ย ย ย ย ย ย ย ย let itemsSelectedCount = 0;

ย ย ย ย ย ย ย ย const currentOrderItems = []; // To store items for modal summary



ย ย ย ย ย ย ย ย menuItemsData.forEach(item => {

ย ย ย ย ย ย ย ย ย ย const checkbox = document.getElementById(`item-${item.name.replace(/\s/g, '-')}`);

ย ย ย ย ย ย ย ย ย ย const quantityInput = document.getElementById(`qty-${item.name.replace(/\s/g, '-')}`);



ย ย ย ย ย ย ย ย ย ย if (checkbox.checked) {

ย ย ย ย ย ย ย ย ย ย ย ย const quantity = parseInt(quantityInput.value);

ย ย ย ย ย ย ย ย ย ย ย ย if (quantity > 0) {

ย ย ย ย ย ย ย ย ย ย ย ย ย ย const itemTotal = item.price * quantity;

ย ย ย ย ย ย ย ย ย ย ย ย ย ย total += itemTotal;



ย ย ย ย ย ย ย ย ย ย ย ย ย ย const li = document.createElement('li');

ย ย ย ย ย ย ย ย ย ย ย ย ย ย li.textContent = `${item.name} x ${quantity} (${itemTotal.toLocaleString('vi-VN')} VNฤ)`;

ย ย ย ย ย ย ย ย ย ย ย ย ย ย selectedItemsList.appendChild(li);

ย ย ย ย ย ย ย ย ย ย ย ย ย ย currentOrderItems.push({ name: item.name, quantity: quantity, total: itemTotal });

ย ย ย ย ย ย ย ย ย ย ย ย ย ย itemsSelectedCount++;

ย ย ย ย ย ย ย ย ย ย ย ย } else {

ย ย ย ย ย ย ย ย ย ย ย ย ย ย // If checkbox is checked but quantity is 0, uncheck it

ย ย ย ย ย ย ย ย ย ย ย ย ย ย checkbox.checked = false;

ย ย ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย ย ย } else {

ย ย ย ย ย ย ย ย ย ย ย ย // If checkbox is unchecked, ensure quantity is 0

ย ย ย ย ย ย ย ย ย ย ย ย quantityInput.value = 0;

ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย });



ย ย ย ย ย ย ย ย if (itemsSelectedCount === 0) {

ย ย ย ย ย ย ย ย ย ย selectedItemsList.innerHTML = '<li>Chฦฐa cรณ mรณn nรo ฤฦฐแปฃc chแปn.</li>';

ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย totalPriceSpan.textContent = `${total.toLocaleString('vi-VN')} VNฤ`;



ย ย ย ย ย ย ย ย // Update modal summary

ย ย ย ย ย ย ย ย orderSummaryList.innerHTML = '';

ย ย ย ย ย ย ย ย if (currentOrderItems.length === 0) {

ย ย ย ย ย ย ย ย ย ย orderSummaryList.innerHTML = '<li>Chฦฐa cรณ mรณn nรo ฤฦฐแปฃc chแปn.</li>';

ย ย ย ย ย ย ย ย } else {

ย ย ย ย ย ย ย ย ย ย currentOrderItems.forEach(item => {

ย ย ย ย ย ย ย ย ย ย ย ย const li = document.createElement('li');

ย ย ย ย ย ย ย ย ย ย ย ย li.textContent = `${item.name} x ${item.quantity} (${item.total.toLocaleString('vi-VN')} VNฤ)`;

ย ย ย ย ย ย ย ย ย ย ย ย orderSummaryList.appendChild(li);

ย ย ย ย ย ย ย ย ย ย });

ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย orderSummaryTotal.textContent = `${total.toLocaleString('vi-VN')} VNฤ`;

ย ย ย ย ย ย }



ย ย ย ย ย ย // Add event listeners to all checkboxes and quantity inputs

ย ย ย ย ย ย menuItemsData.forEach(item => {

ย ย ย ย ย ย ย ย const checkbox = document.getElementById(`item-${item.name.replace(/\s/g, '-')}`);

ย ย ย ย ย ย ย ย const quantityInput = document.getElementById(`qty-${item.name.replace(/\s/g, '-')}`);



ย ย ย ย ย ย ย ย checkbox.addEventListener('change', () => {

ย ย ย ย ย ย ย ย ย ย if (checkbox.checked && parseInt(quantityInput.value) === 0) {

ย ย ย ย ย ย ย ย ย ย ย ย quantityInput.value = 1;

ย ย ย ย ย ย ย ย ย ย } else if (!checkbox.checked) {

ย ย ย ย ย ย ย ย ย ย ย ย quantityInput.value = 0;

ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย ย ย updateCustomCombo();

ย ย ย ย ย ย ย ย });



ย ย ย ย ย ย ย ย quantityInput.addEventListener('change', () => {

ย ย ย ย ย ย ย ย ย ย if (parseInt(quantityInput.value) < 0) {

ย ย ย ย ย ย ย ย ย ย ย ย quantityInput.value = 0;

ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย ย ย if (parseInt(quantityInput.value) > 0) {

ย ย ย ย ย ย ย ย ย ย ย ย checkbox.checked = true;

ย ย ย ย ย ย ย ย ย ย } else {

ย ย ย ย ย ย ย ย ย ย ย ย checkbox.checked = false;

ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย ย ย updateCustomCombo();

ย ย ย ย ย ย ย ย });



ย ย ย ย ย ย ย ย quantityInput.addEventListener('input', () => {

ย ย ย ย ย ย ย ย ย ย if (parseInt(quantityInput.value) < 0) {

ย ย ย ย ย ย ย ย ย ย ย ย quantityInput.value = 0;

ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย ย ย if (parseInt(quantityInput.value) > 0) {

ย ย ย ย ย ย ย ย ย ย ย ย checkbox.checked = true;

ย ย ย ย ย ย ย ย ย ย } else {

ย ย ย ย ย ย ย ย ย ย ย ย checkbox.checked = false;

ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย ย ย updateCustomCombo();

ย ย ย ย ย ย ย ย });

ย ย ย ย ย ย });



ย ย ย ย ย ย // Event listener for clear selection button

ย ย ย ย ย ย clearSelectionBtn.addEventListener('click', () => {

ย ย ย ย ย ย ย ย document.querySelectorAll('input[name="combo-item"]').forEach(checkbox => {

ย ย ย ย ย ย ย ย ย ย checkbox.checked = false;

ย ย ย ย ย ย ย ย ย ย const quantityInput = document.getElementById(`qty-${checkbox.value.replace(/\s/g, '-')}`);

ย ย ย ย ย ย ย ย ย ย if (quantityInput) {

ย ย ย ย ย ย ย ย ย ย ย ย quantityInput.value = 0;

ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย });

ย ย ย ย ย ย ย ย updateCustomCombo(); // Update display after clearing

ย ย ย ย ย ย });



ย ย ย ย ย ย // Event listener for Ship Now button (to open modal)

ย ย ย ย ย ย shipNowBtn.addEventListener('click', () => {

ย ย ย ย ย ย ย ย shipNowModal.classList.remove('hidden');

ย ย ย ย ย ย ย ย updateCustomCombo(); // Ensure summary in modal is up-to-date

ย ย ย ย ย ย });



ย ย ย ย ย ย // Event listener for Close Modal button

ย ย ย ย ย ย closeModalBtn.addEventListener('click', () => {

ย ย ย ย ย ย ย ย shipNowModal.classList.add('hidden');

ย ย ย ย ย ย });



ย ย ย ย ย ย // Event listener for Send Order button (in modal)

ย ย ย ย ย ย sendOrderBtn.addEventListener('click', () => {

ย ย ย ย ย ย ย ย const address = addressInput.value.trim();

ย ย ย ย ย ย ย ย const customerPhone = phoneInput.value.trim();

ย ย ย ย ย ย ย ย const selectedItems = [];

ย ย ย ย ย ย ย ย let totalOrderPrice = 0;



ย ย ย ย ย ย ย ย menuItemsData.forEach(item => {

ย ย ย ย ย ย ย ย ย ย const checkbox = document.getElementById(`item-${item.name.replace(/\s/g, '-')}`);

ย ย ย ย ย ย ย ย ย ย const quantityInput = document.getElementById(`qty-${item.name.replace(/\s/g, '-')}`);

ย ย ย ย ย ย ย ย ย ย if (checkbox.checked && parseInt(quantityInput.value) > 0) {

ย ย ย ย ย ย ย ย ย ย ย ย const quantity = parseInt(quantityInput.value);

ย ย ย ย ย ย ย ย ย ย ย ย const itemTotal = item.price * quantity;

ย ย ย ย ย ย ย ย ย ย ย ย selectedItems.push(`${item.name} x ${quantity} (${itemTotal.toLocaleString('vi-VN')} VNฤ)`);

ย ย ย ย ย ย ย ย ย ย ย ย totalOrderPrice += itemTotal;

ย ย ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย });



ย ย ย ย ย ย ย ย if (!address || !customerPhone) {

ย ย ย ย ย ย ย ย ย ย // Using a custom message box instead of alert

ย ย ย ย ย ย ย ย ย ย alert('Vui lรฒng nhแบญp ฤแบงy ฤแปง ฤแปa chแป vร sแป ฤiแปn thoแบกi cแปงa bแบกn!');

ย ย ย ย ย ย ย ย ย ย return;

ย ย ย ย ย ย ย ย }

ย ย ย ย ย ย ย ย if (selectedItems.length === 0) {

ย ย ย ย ย ย ย ย ย ย // Using a custom message box instead of alert

ย ย ย ย ย ย ย ย ย ย alert('Vui lรฒng chแปn รญt nhแบฅt mแปt mรณn ฤแป ฤแบทt hรng!');

ย ย ย ย ย ย ย ย ย ย return;

ย ย ย ย ย ย ย ย }



ย ย ย ย ย ย ย ย let orderMessage = `ฤฦN HรNG MแปI Tแปช MENU NHร XOรI:\n\n`;

ย ย ย ย ย ย ย ย orderMessage += `Cรกc mรณn ฤรฃ chแปn:\n`;

ย ย ย ย ย ย ย ย selectedItems.forEach(item => {

ย ย ย ย ย ย ย ย ย ย orderMessage += `- ${item}\n`;

ย ย ย ย ย ย ย ย });

ย ย ย ย ย ย ย ย orderMessage += `\nTแปng tiแปn: ${totalOrderPrice.toLocaleString('vi-VN')} VNฤ\n`;

ย ย ย ย ย ย ย ย orderMessage += `ฤแปa chแป giao hรng: ${address}\n`;

ย ย ย ย ย ย ย ย orderMessage += `Sแป ฤiแปn thoแบกi khรกch: ${customerPhone}\n\n`;

ย ย ย ย ย ย ย ย orderMessage += `Vui lรฒng xรกc nhแบญn ฤฦกn hรng!`;



ย ย ย ย ย ย ย ย // Encode the message for URL

ย ย ย ย ย ย ย ย const encodedMessage = encodeURIComponent(orderMessage);



ย ย ย ย ย ย ย ย // Zalo deep link (this will attempt to open Zalo app)

ย ย ย ย ย ย ย ย // Note: The success of Zalo deep links can vary depending on device and Zalo app version.

ย ย ย ย ย ย ย ย const zaloUrl = `https://zalo.me/${shopPhoneNumber}?text=${encodedMessage}`;

ย ย ย ย ย ย ย ยย

ย ย ย ย ย ย ย ย // Open Zalo link in a new tab/window

ย ย ย ย ย ย ย ย window.open(zaloUrl, '_blank');



ย ย ย ย ย ย ย ย // Optionally clear selection and close modal after sending

ย ย ย ย ย ย ย ย clearSelectionBtn.click(); // Simulate click to clear selection

ย ย ย ย ย ย ย ย shipNowModal.classList.add('hidden');

ย ย ย ย ย ย });



ย ย ย ย ย ย // Initial update

ย ย ย ย ย ย updateCustomCombo();

ย ย ย ย });

